<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>
  
  <p>
    <strong>Price:</strong>
    // make the price float
    <%= number_to_currency product.price %>
  </p>

</div>
